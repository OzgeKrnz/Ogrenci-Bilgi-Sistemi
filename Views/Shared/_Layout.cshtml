@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Öğrenci Bilgi Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>
        <partial name="_LoginPartial"/>
    </nav>
</header>

<body>

@if (User.Identity.IsAuthenticated)
{
    <nav class="navbar  bg-body-tertiary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-start" tabindex="1" id="offcanvasNavbar">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Öğrenci Bilgi Sistemi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <img src="Images/user.png" class="stdIcon " style="margin-left: 10px"/>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-start">
                        <li class="nav-link">
                            <a  class="nav-link">
                                <i class="bi bi-house-door-fill"> Ana Sayfa</i>
                            </a>
                        </li>
                        <li class="nav-link dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"> Öğrenci Bilgileri</i>
                            </a>
                            <ul class="dropdown-menu">
                                <table class="table">
                                    <tr class="table-light"><th colspan="3"> Ad Soyad:<td>Özge Kurnaz</td></tr>
                                    <tr class="table-light"><th colspan="3">Fakülte/Bölüm:<td>Bilgisayar Mühendisliği</td></tr>
                                    <tr class="table-light"><th colspan="3">Öğrenci Numarası:<td>10020030</td></tr>
                                    <tr class="table-light"><th colspan="3">Genel Not Ortalaması:<td>3.01</td></tr>
                                    <tr class="table-light"><th colspan="3">Email Adresi:<td>ozge@ogr.edu.tr</td></tr>

                                </table>
                            </ul>

                        </li>
                        <li class="nav-link">
                            <a asp-controller="Classes" asp-action="Index" class="nav-link">
                                <i class="bi bi-journal-bookmark-fill">Güz Dönemi Dersleri/Notlar</i>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a asp-controller="Classes1" asp-action="Index" class="nav-link">
                                <i class="bi bi-journal-bookmark-fill">Bahar Dönemi Dersleri/Notlar</i>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a asp-controller="AcademicCalendar" asp-action="Index" class="nav-link">
                                <i class="bi bi-calendar2-fill"></i> Akademik Takvim
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </nav>

}
<div class="flex-child "><img src="Images/uniIcon.jpeg" alt="university photo" width="600px" height="600px"/></div>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

</body>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

